// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  loginId         String   @unique @db.VarChar(20)
  loginPw         String
  nickname        String   @db.VarChar(20)
  houseName       String   @db.VarChar(20)
  friends         Friend[] @relation("frinedUser")
  friendsRelation Friend[] @relation("userFriend")
  books           Book[]
  musics          Music[]
  travels         Travel[]
  photos          Photo[]
}

model Friend {
  user     User @relation(fields: [userId], references: [id], name: "frinedUser")
  userId   Int
  friend   User @relation(fields: [friendId], references: [id], name: "userFriend")
  friendId Int
  accept   Int

  @@id([userId, friendId])
}

model Book {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  title  String @db.VarChar(100)
  body   String @db.Text
}

model Music {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  title  String @db.VarChar(100)
  body   String @db.Text
}

model Travel {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  title  String @db.VarChar(100)
  body   String @db.Text
}

model Photo {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  title  String @db.VarChar(100)
  body   String @db.Text
}
